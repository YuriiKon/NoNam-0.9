<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Главная</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse menu">
        <div class="container-fluid col-md-offset-3">
            <div class="navbar-header col-md-2">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AutBootstrap", "Index","Home", null, new { @class = "navbar-brand brand " })
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav col-md-3">
                    <li>@Html.ActionLink("Cериалы", "Index", "Serial")</li>
                </ul>
                @Html.Partial("_SearchPartial")
                @Html.Partial("_LoginPartial")
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-3 bar-left">
                <ul class="list-group">
                    <li class="list-group-item">@Html.ActionLink("Новые серии", "Index", "User")</li>
                    <li class="list-group-item">@Html.ActionLink("Скоро выйдет", "Calendar", "User")</li>
                    <li class="list-group-item">@Html.ActionLink("Профиль", "Profile", "User")</li>
                </ul>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
       
        <div class="navbar-fixed-bottom row-fluid footer-bottom">
            <div class="footer-top">
            </div>
            <div class="navbar-inner ">
                <div class="footer-text col-md-offset-3 ">
                    <p>&copy; @DateTime.Now.Year – MehSoft 18+</p>
                </div>
            </div>
        </div>
    </div>
</div>
   

    
   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
